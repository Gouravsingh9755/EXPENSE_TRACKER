<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8" />
    <title>Login and Registration Form</title>
    <link rel="stylesheet" href="/stylesheets/register.css" />
    <!-- Fontawesome CDN Link -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <div class="container">
      <input type="checkbox" id="flip" />
      <div class="cover">
        <div class="front">
          <img
            src="https://as2.ftcdn.net/v2/jpg/05/53/72/19/1000_F_553721980_qK5wTnwpahXwkCaOxOBBqCMeZANNs9Nf.jpg"
            alt=""
          />
          <div class="text MAINTXT">
            <span class="text-1"
              >A budget is more than <br />
              just numbers; <br />it's a roadmap to
            </span>
            <span class="text-2"> Financial Freedom.</span>
          </div>
        </div>
        <div class="back">
          <!-- <img class="backImg" src="images/backImg.jpg" alt=""> -->
          <div class="text">
            <span class="text-1"
              >Complete miles of journey <br />
              with one step</span
            >
            <span class="text-2">Let's get started</span>
          </div>
        </div>
      </div>
      <div class="forms">
        <div class="form-content">
          <div class="login-form">
            <!-- LOGIN FORM -->
            <!-- LOGIN FORM -->
            <div class="title">Login</div>
            <form action="/signin" method="post">
              <div class="input-boxes">
                <div class="input-box">
                  <i class="fas fa-envelope"></i>
                  <input
                    type="text"
                    name="username"
                    placeholder="Enter your Username"
                    required
                  />
                </div>
                <div class="input-box">
                  <i class="fas fa-lock"></i>
                  <input
                    type="password"
                    name="password"
                    placeholder="Enter your password"
                    required
                  />
                </div>
                <div class="text"><a href="/forget">Forgot password?</a></div>
                <div class="button input-box">
                  <input type="submit" value="Submit" />
                </div>
                <div class="text sign-up-text">
                  Don't have an account?
                  <label class="signupbtn" for="flip">Sigup now</label>
                </div>
              </div>
            </form>
            <!-- LOGIN FORM -->
            <!-- LOGIN FORM -->
          </div>
          <div class="signup-form">
            <!-- SIGNUP FORM -->
            <!-- SIGNUP FORM -->
            <div class="title">Signup</div>
            <form action="/signup" method="post">
              <div class="input-boxes">
                <div class="input-box">
                  <i class="fas fa-user"></i>
                  <input
                    type="text"
                    name="username"
                    placeholder="Enter your Username"
                    required
                  />
                </div>
                <div class="input-box">
                  <i class="fas fa-envelope"></i>
                  <input
                    type="email"
                    name="email"
                    placeholder="Enter your email"
                    required
                  />
                </div>
                <div class="input-box">
                  <i class="fas fa-lock"></i>
                  <input
                    type="password"
                    name="password"
                    placeholder="Enter your password"
                    required
                  />
                </div>
                <div class="button input-box">
                  <input type="submit" value="Submit" />
                </div>
                <div class="text sign-up-text">
                  Already have an account?
                  <label class="signinbtn" for="flip">Login now</label>
                </div>
              </div>
            </form>
            <!-- SIGNUP FORM -->
            <!-- SIGNUP FORM -->
          </div>
        </div>
      </div>
    </div>
    <script>
      var signtxt = document.querySelector(".MAINTXT");
      var signupbtn = document.querySelector(".signupbtn");
      var signinbtn = document.querySelector(".signinbtn");
      console.log(signinbtn);

      var flagbtn = 0;
      signupbtn.addEventListener("click", function (eve) {
        if (flagbtn == 0) {
          signtxt.style.transform = "rotateY(180deg)";
          flagbtn = 1;
        }
      });
      signinbtn.addEventListener("click", function (eve) {
        if (flagbtn == 1) {
          signtxt.style.transform = "rotateY(0deg)";
          console.log("123");
          flagbtn = 0;
        }
      });
    </script>
  </body>
</html>
